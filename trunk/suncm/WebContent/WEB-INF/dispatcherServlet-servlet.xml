<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//spring//DTD BEAN/EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name ="mappings">
			<props>
			<prop key="ifw.do">ifwAction</prop>
			<prop key="ifwlogon.do">ifwLogonAction</prop>
			<prop key="ifwfileup.do">ifwFileAction</prop>
			<!-- prop key="login.do">login</prop-->
			</props>
		</property>
	</bean>
	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name ="viewClass">
			<value>org.springframework.web.servlet.view.InternalResourceView</value>
		</property>
		<property name ="prefix">
			<value>/WEB-INF/jsp/</value>
		</property>
		<property name ="suffix">
			<value>.jsp</value>
		</property>
	</bean>
	
	<bean id="ifwAction" class="com.spring.action.IfwAction">

	</bean>
	<bean id="ifwLogonAction" class="com.spring.action.IfwLogonAction">
	</bean>	
		<bean id="ifwFileAction" class="com.spring.action.IfwFileUploadAction">
	</bean>	
</beans>
